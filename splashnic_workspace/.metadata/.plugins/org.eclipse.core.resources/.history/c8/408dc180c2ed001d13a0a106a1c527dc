/* USER CODE BEGIN PV */
uint16_t msg_size=255;
uint8_t msg_buffer[255];
uint32_t msg_TO=100;//time out in ms

//GPS
int NMEA_status=0;

// LED
uint8_t LED_Data[MAX_LED][4];
uint8_t LED_Mod[MAX_LED][4];  // for brightness

uint16_t pwmData[(24*MAX_LED)+50];
uint16_t datasentflag = 0;
/* USER CODE END PV */

